<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:fillViewport="true"
    tools:context=".RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Logo/Icono de la App -->
        <ImageView
            android:id="@+id/iv_register_logo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="32dp"
            android:contentDescription="Logo de la aplicación"
            android:src="@drawable/ic_launcher_foreground" />

        <!-- Título -->
        <TextView
            android:id="@+id/tv_register_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:text="Crear Cuenta"
            android:textColor="#2196F3"
            android:textSize="28sp"
            android:textStyle="bold" />

        <!-- Subtítulo -->
        <TextView
            android:id="@+id/tv_register_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:text="Únete a Butterfly hoy"
            android:textColor="#757575"
            android:textSize="16sp"
            android:gravity="center" />

        <!-- Container para el formulario -->
        <LinearLayout
            android:id="@+id/layout_register_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:background="#FFFFFF"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Campo de Nombre -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre completo"
                android:textColor="#757575"
                android:textSize="14sp"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/et_register_name"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/edittext_background"
                android:hint="Tu nombre completo"
                android:inputType="textPersonName"
                android:maxLines="1"
                android:padding="12dp"
                android:textSize="16sp" />

            <!-- Campo de Email -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Correo electrónico"
                android:textColor="#757575"
                android:textSize="14sp"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/et_register_email"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/edittext_background"
                android:hint="tu@email.com"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:padding="12dp"
                android:textSize="16sp" />

            <!-- Campo de Contraseña -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contraseña"
                android:textColor="#757575"
                android:textSize="14sp"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/et_register_password"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/edittext_background"
                android:hint="Mínimo 6 caracteres"
                android:inputType="textPassword"
                android:maxLines="1"
                android:padding="12dp"
                android:textSize="16sp" />

            <!-- Campo de Confirmar Contraseña -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Confirmar contraseña"
                android:textColor="#757575"
                android:textSize="14sp"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/et_register_confirm_password"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="24dp"
                android:background="@drawable/edittext_background"
                android:hint="Repite tu contraseña"
                android:inputType="textPassword"
                android:maxLines="1"
                android:padding="12dp"
                android:textSize="16sp" />

            <!-- Nota de términos y condiciones -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:text="Al crear tu cuenta, aceptas nuestros Términos de Servicio y Política de Privacidad"
                android:textColor="#9E9E9E"
                android:textSize="12sp"
                android:gravity="center" />

            <!-- Botón de Registrarse -->
            <Button
                android:id="@+id/btn_register_submit"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/button_primary"
                android:text="Crear Cuenta"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Opción para regresar al login -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¿Ya tienes una cuenta? "
                android:textColor="#757575"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_back_to_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:padding="8dp"
                android:text="Inicia sesión"
                android:textColor="#2196F3"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Versión de la app -->
        <TextView
            android:id="@+id/tv_register_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="24dp"
            android:text="Versión 1.0.0"
            android:textColor="#9E9E9E"
            android:textSize="12sp" />

    </LinearLayout>

</ScrollView>